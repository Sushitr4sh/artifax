<!doctype html>
<html lang="en">
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>artifax</title>
  <!-- CSS -->
  <link rel="stylesheet" href="/stylesheets/output.css" />
  <link rel="stylesheet" href="/stylesheets/custom.css" />
  <style>
    body {
      background-image: radial-gradient(#262626 2px, transparent 0);
      background-size: 20px 20px;
      background-position: -19px -19px;
    }
  </style>

  <!-- Font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet"
  />
  <body
    class="mobileScreen flex w-full flex-col items-center justify-center bg-[#171717] lg:h-screen"
    style="font-family: Inter, sans-serif"
  >
    <nav
      class="absolute top-0 flex w-full items-center justify-between bg-[#171717]/30 px-8 py-6 text-white shadow-xl backdrop-blur-sm md:border-none md:px-16 lg:h-[10vh] lg:px-28"
    >
      <div class="flex items-end gap-x-2 lg:items-center">
        <img src="/images/logo.png" class="w-5" />
        <a href="/" class="flex items-center gap-x-2 font-semibold md:text-2xl">
          <p class="leading-none">artifax.</p>
        </a>
      </div>
      <% if(currentUser){ %>
      <a href="/chats" class="font-semibold text-emerald-500"
        ><%= currentUser.username %></a
      >
      <% } %>
    </nav>

    <main class="mx-auto w-[85%] text-white">
      <P>Powered by:</P>
      <p class="text-3xl font-bold">STABLE DIFFUSION XL</p>
      <p class="font-medium">SDXL 1.0: A Leap Forward in AI Image Generation</p>

      <section
        class="mx-auto mt-8 flex aspect-square w-full items-center justify-center rounded-lg bg-white/30 p-4 text-white backdrop-blur-sm"
      >
        <!-- <p>Your image will be displayed here</p> -->
        <img
          src="https://s3.amazonaws.com/stabled.response/blue+bmw+racing+a+yellow+ferrari+car_d1647731-117.png"
          alt=""
          srcset=""
          class="rounded-lg"
        />
      </section>

      <form
        action="/chats/playground"
        method="POST"
        class="mt-4 w-full rounded-lg bg-[#4a4a4a] p-3"
      >
        <input
          type="text"
          name="textChat"
          id="textChat"
          placeholder="Enter your prompt"
          class="rounded-lg bg-[#4a4a4a] p-2 font-semibold focus:outline-none"
        />
        <button
          type="submit"
          class="flex w-full justify-center rounded-md bg-sky-500 py-2 font-medium"
        >
          <p>Generate</p>
        </button>
      </form>
    </main>
    <!-- JavaScripts -->
    <script src="/javascripts/custom.js"></script>
  </body>
</html>
